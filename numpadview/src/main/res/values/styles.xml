<resources>
    <style name="pinpad_light_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:background">@drawable/selector_keypad_light_bg</item>
    </style>

    <style name="pinpad_light_button_with_divider" parent="pinpad_light_button">
        <item name="showBottomDivider">true</item>
    </style>

    <style name="numpad_vertical_divider">
        <item name="android:layout_width">@dimen/divider_thickness</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_12</item>
        <item name="android:layout_marginBottom">@dimen/dimen_12</item>
        <item name="android:background">@color/white_15</item>
    </style>
</resources>
